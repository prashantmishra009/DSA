  bool arraySortedOrNot(int arr[], int n) {
        // code here
        int ans[n];
        for(int i=0;i<n;i++){
            ans[i]=arr[i];
        }
        sort(ans,ans+n);
        bool check=1;
        for(int i=0;i<n;i++){
            if(ans[i] !=arr[i]){
                check=0;
                break;
            }
        }
        return check;
    }
